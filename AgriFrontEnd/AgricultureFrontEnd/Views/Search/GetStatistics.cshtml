@model AgricultureFrontEnd.Models.Vm.AfforestationVM.AfforestationSearchVM

@{
    ViewBag.Title = "Make Search";
    Layout = "_Layout";
}

<form asp-action="GetStatistics" asp-controller="Search" method="post" class="p-4 bg-light rounded shadow-sm" style="max-width: 500px; margin: auto;">
    @Html.AntiForgeryToken()

    <h4 class="mb-4 text-center">Select Duration & Filters</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group mb-3">
        <label>From Date:</label>
        <input asp-for="FromDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>To Date:</label>
        <input asp-for="ToDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Select User:</label>
        <select asp-for="SelectedUserId" asp-items="Model.Users" class="form-control"></select>
    </div>

    <div class="form-group mb-3">
        <label>Select Location:</label>
        <select asp-for="SelectedLocationId" asp-items="Model.Locations" class="form-control"></select>
    </div>

    <div class="form-group mb-3">
        <label>Select Tree:</label>
        <select asp-for="SelectedTreeId" asp-items="Model.Trees" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary w-100" style="background-color: #14ae64">Search</button>
</form>