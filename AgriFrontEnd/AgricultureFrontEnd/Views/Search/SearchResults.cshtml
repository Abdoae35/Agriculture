@model AgricultureFrontEnd.Models.Vm.AfforestationVM.AfforestationPageVM

@{
    ViewBag.Title = "Search Results";
    Layout = "_Layout";
}
@{
    
}

<h3 class="mb-4 text-center">Detailed Results</h3>

@if (Model.TreeDetails == null || !Model.TreeDetails.Any())
{
    <div class="alert alert-warning text-center">
        No data found for the selected duration.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle text-center shadow-sm" >
            <thead  style="background-color: #14ae64">
            <tr style="color: white">
                <th>Date Planted</th>
                <th>Tree Name</th>
                <th>Location Name</th>
                <th>Number</th>
                <th>User Name</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.TreeDetails)
            {
                <tr>
                    <td>@item.DateOfPlanted.ToString("yyyy-MM-dd")</td>
                    <td>@item.TreeName</td>
                    <td>@item.LocationName</td>
                    <td>@item.Number</td>
                    <td>@item.UserName</td>
                </tr>
            }
            </tbody>
        </table>

        
        <h3 class="mb-4 text-center">Summary</h3>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle text-center shadow-sm">
            <thead style="background-color: #14ae64">
            <tr style="color: white">

                <th>Tree Name</th>
                <th>Total Number</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.TreeSummaries)
            {
                <tr>

                    <td>@item.TreeName</td>
                    <td>@item.TotalPlanted</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

}