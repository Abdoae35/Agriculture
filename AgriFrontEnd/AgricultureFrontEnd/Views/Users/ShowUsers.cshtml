@model List<UserReadVM>
@{
    ViewBag.Title = " Show All Users";
    Layout = "_Layout";
}


<h3 class="mb-4 text-center">All Users</h3>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        No Users Fount.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle text-center shadow-sm" >
            <thead  style="background-color: #14ae64">
            <tr style="color: white">
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Delete User</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Role.ToString()</td>
                   <td>
                        <a asp-controller="Users"
                        asp-action="DeleteUser"
                        asp-route-id="@item.Id"
                        class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete the account: @item.Name?');">
                            حذف المستخدم
                        </a>
                    </td>
                   
                </tr>
            }
            </tbody>
        </table>

        
        
    </div>

}